from flask import Flask, render_template
import requests

app = Flask(__name__)

@app.route("/")
def index():
    # Get the 10 universities from the API
    response = requests.get("http://universities.hipolabs.com/search?name=middle")
    data = response.json()
    university_list = data['results']
    
    # Create a list to hold university details
    universities = []
    
    for university in university_list:
        # Each university URL looks like "http://universities.hipolabs.com/search?name=middle"
        url = university['url']
        parts = url.strip("/").split("/")
        id = parts[-1]  # The last part is the Kitten's ID
        
        # Create an image URL using the university's ID
        image_url = f"https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{id}.png"
        
        universities.append({
            'name': university['name'].capitalize(),
            'id': id,
            'image': image_url
        })
    
    # Send the university list to the index.html page
    return render_template("index.html", universities=universities)

# New route: When a user clicks a Kitten card, this page shows more details and a stats chart
@app.route("/universities/<int:id>")
def kitten_detail(id):
    # Get detailed info for the Kitten using its id
    response = requests.get(f"http://universities.hipolabs.com/search?name=middle")
    data = response.json()
    
    # Extract extra details like types, height, and weight
    types = [t['type']['name'] for t in data['types']]
    strength = data.get('strength')
    name = data.get('name').capitalize()
    image_url = f"https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{id}.png"
    
    # Extract base stats for the chart (e.g., hp, attack, defense, etc.)
    stat_names = [stat['stat']['name'] for stat in data['stats']]
    stat_values = [stat['base_stat'] for stat in data['stats']]
    
    # Send all details to the university.html template
    return render_template("university.html", university={
        'name': name,
        'id': id,
        'image': image_url,
        'types': types,
        'strength': strength,
        'stat_names': stat_names,
        'stat_values': stat_values
    })

if __name__ == '__main__':
    app.run(debug=True)